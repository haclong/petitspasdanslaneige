---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag | slugify }}.html
---

{% extends "main.njk" %}

{% block content %}
<div class="container-xl" id="home">
<h1>{{ tag }}</h1>

{% set taglist = collections[ tag ] %}
{%- for post in taglist | reverse -%}
  {% include "blocks/postsummary.njk" %}
{%- endfor -%}

</div>


{% endblock %}
