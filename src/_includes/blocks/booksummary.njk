
    <article class="article container-xl">
      <h2><a href="{{ post.url }}">{{ post.data.title | safe }}</a></h2>

      <div class="node-meta">
        <i class="fas fa-user"></i>{{ post.data.author }}
        <i class="fas fa-calendar"></i>{{ post.date.toLocaleString(locale) }}
        {% if post.data.sites | length > 0 %}
        <i class="fas fa-th-large"></i>
          {%- for site in post.data.sites -%}
            <!--a href="/{{ locale }}/sites/{{site | slugify}}.html" class="tag-sites"-->{{ site }}<!--/a-->{{ ", " if site != post.data.sites|last }}
          {%- endfor -%}
        {% endif %}
      </div>

      <p class="dummy">
        {{ post.data.summary | nl2br | safe }}
      </p>

      {% if post.data.tags|length > 0 %}
        <div class="node-taxonomy">
          <h3><i class="fas fa-bookmark"></i>Tags</h3>
          <ul>
          {%- for tag in post.data.tags -%}
            <li><a href="/{{ locale }}/tags/{{ tag | slugify }}.html">{{ tag }}</a></li>
          {%- endfor -%}
          </ul>
        </div>
      {% endif %}

      <div class="hr-double"></div>
    </article>
